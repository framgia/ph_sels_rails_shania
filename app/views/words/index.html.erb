<% provide(:title, "Words learned") %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <%= render 'shared/user_info' %>
        </section><!-- end of user_info -->
        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
    </aside>
        <div class="col-md-8">
            <ol class="activities">
                <div class="container mt-4">
                    <div class="row justify-content-center">
                        <div class="card shadow col-md-8">
                            <div class="card-body">
                                <table class="table table-hover">
                                <% if @user.lessons.any? %>
                                <thead>
                                    <tr>
                                        <th>Words</th>
                                        <th>Your answers</th>
                                        <th rowspan="2">Correct answer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <% @user.lessons.each do |lesson| %>
                                                <% lesson.answers.each do |answer| %>
                                                    <td> <%= answer.word.name %> </td>
                                                    <td> <%= answer.choice.content %> </td>
                                                    <td> <%= answer.word.word_choices %> </td>
                                                    <% if answer.choice.content == answer.word.word_choices %>
                                                        <td><h3 class="text-success">✓</h3></td>
                                                    <% else %>
                                                        <td><h3 class="text-danger">✕</h3></td>
                                                    <% end %>
                                                <% end %>
                                        <% end %>
                                    <% else %>
                                    <span>
                                        <h3 class="center">No record.</h3>
                                        <div class="image">
                                            <%= link_to image_tag("1906_Surprised_Pikachu.png", alt: "Pikachu emote"),
                                                'https://discordemoji.com/assets/emoji/1906_Surprised_Pikachu.png' %>
                                        </div>
                                    </span>
                                    </tr>
                                </tbody>
                                <% end %>
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </ol>
        </div>
</div>