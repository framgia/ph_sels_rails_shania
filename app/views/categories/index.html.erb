<% provide(:title, "Lessons") %>

<h1>Categories</h1>
<div class="card-deck">
    <% @categories.each do |category| %>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"> <%= category.title %> </h5>
                <p class="card-text">
                    <%= category.description %>
                </p>
                <% if logged_in? %>
                    <%= link_to "Start", class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>