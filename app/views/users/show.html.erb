<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-3">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
        <section class="stats">
            <div class="col-md-8">
                <%= render 'follow_form' if logged_in? %>
            </div>
            <br>
            <%= render 'shared/stats' %>
        </section>
        <section>
            <%= total = @user.answers.count %> words learned
        </section>
    </aside>
    <div class="col-md-8">
        <% if @user.activities.any? %>
            <div class="col-md-12">
                <div class="container mt-4">
                    <div class="row justify-content-center">
                        <div class="card shadow col-md-12">
                            <div class="card-body">
                                <ol class="activities">
                                    <h3>Activities</h3>
                                    <ol class="activities">
                                        <%= render @activities %>
                                    </ol>
                                    <%= will_paginate @activities %>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% else %>
            <div class="container mt-4">
                <div class="row justify-content-center">
                    <div class="card shadow col-md-8">
                        <div class="card-body">
                            <span>
                                <h3 class="center">No acitivites.</h3>
                                <div class="image">
                                    <%= link_to image_tag("1906_Surprised_Pikachu.png", alt: "Pikachu emote"),
                                        'https://discordemoji.com/assets/emoji/1906_Surprised_Pikachu.png' %>
                                </div>
                                <br>
                                <% if @user == current_user %>
                                    <h5 class="center">Why don't you try following other users?</h5>
                                    <div class="row justify-content-center">
                                        <%= link_to "Find friends", users_path %>
                                    </div>
                                <% end %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>