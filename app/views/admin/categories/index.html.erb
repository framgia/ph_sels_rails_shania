<% provide(:title, "Lessons") %>
<% if @categories.any? %>
    <h1>All lessons</h1>
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr class="bg-primary">
                    <th class="text-white" colspan="3">Category</th>
                    <th><%= link_to "Add category", new_admin_category_path, class: "btn btn-light" %></th>
                </tr>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Words</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% @categories.each do |category| %>
                    <tr>
                        <td><%= link_to category.title, admin_category_words_url(category.id) %></td>
                        <td><%= category.description %></td>
                        <td><%= category.words.count %></td>
                        <td>
                            <%= link_to "Edit", edit_admin_category_url(category.id) %> | <%= link_to "Delete", admin_category_url(category.id), method: :delete,
                            data: { confirm: "You sure?"} %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% else %>
    <div class="container col-7">
        <div class="row justify-content-center">
            <div class="card shadow mt-4 col-lg-8">
                <div class="card-body">
                    <span>
                        <h3 class="center">No lessons yet.</h3>
                        <div class="image">
                            <%= link_to image_tag("1906_Surprised_Pikachu.png", alt: "Pikachu emote"),
                                'https://discordemoji.com/assets/emoji/1906_Surprised_Pikachu.png' %>
                        </div>
                        <br>
                        <div class="row justify-content-center">
                            <%= link_to "Create lesson", new_admin_category_path, class:"btn btn-primary btn-lg btn-block" %>
                        </div>
                    </span>
                </div>
            </div>
        </div>
    </div>
<% end %>