<%= form_for [:admin, :category, @word] do |f| %>
<%= render 'shared/error_messages', object: @word %>
    <div class = 'form-group'>
        <%= f.label :name %>
        <%= f.text_field :name, class:'form-control' %>
    </div>

    <div class = 'form-group'>
        <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
<% end %>