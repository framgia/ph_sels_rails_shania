<% provide(:title, "Category words") %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="card shadow col-md-8">
            <div class="card-body">
                <h1 class="mt-4"><%= @category.title %></h1>
                <hr>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Word</th>
                            <th>Answer</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @words.each do |word| %>
                        <tr>
                            <td><%= word.name %></td>
                            <td>answer</td>
                            <td>
                                <%= link_to "Edit", edit_admin_category_word_path(@category.id, word.id) %> | <%= link_to "Delete", admin_category_word_path(@category.id, word.id), method: :delete,
                                data: { confirm: "You sure?"} %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <%= link_to "Add word", new_admin_category_word_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>